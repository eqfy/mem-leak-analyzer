{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": ["es6", "dom"],
		"moduleResolution": "node",
		"outDir": "out",
		"rootDir": "src",
		"allowJs": true,
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"sourceMap": true
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test"]
}
