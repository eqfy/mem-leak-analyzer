{
  "name": "project_cpsc410",
  "description": "language server dsl vs code extension",
  "version": "1.0.0",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.63.0"
  },
  "activationEvents": [
    "onLanguage:c",
    "onCommand:VisualizerMenuBar.openTree"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "languageServerExample.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "VisualizerMenuBar.openTree": {
          "title": "Show Tree",
          "type": "boolean",
          "default": true,
          "description": "show icon for 'Show Tree'"
        }
      }
    },
    "commands": [
      {
        "command": "VisualizerMenuBar.openTree",
        "title": "Open Tree",
        "category": "VisualizerMenuBar",
        "icon": "$(tools)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "editorLangId == c && config.VisualizerMenuBar.openTree",
          "command": "VisualizerMenuBar.openTree",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b && cd client && cp ./src/index.html ./out && cp ./src/style.css ./out && webpack",
    "compileWin": "tsc -b && cd client && shx cp ./src/index.html ./out && shx cp ./src/style.css ./out && webpack",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/mocha": "^9.1.0",
    "@types/node": "^18.7.20",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "concurrently": "^7.4.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.24.0",
    "mocha": "^9.2.1",
    "prettier": "^2.7.1",
    "shx": "^0.3.4",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  }
}
